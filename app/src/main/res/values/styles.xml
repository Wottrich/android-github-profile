<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RobotoBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="RobotoRegular">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoBold.Title" parent="RobotoBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RobotoBold.SubTitle" parent="RobotoBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RobotoBold.Description" parent="RobotoBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RobotoRegular.Title" parent="RobotoRegular">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RobotoRegular.SubTitle" parent="RobotoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RobotoRegular.Description" parent="RobotoRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RobotoLight.Title" parent="RobotoLight">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="RobotoLight.SubTitle" parent="RobotoLight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RobotoLight.Description" parent="RobotoLight">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>